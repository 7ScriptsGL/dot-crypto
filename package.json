{
  "private": true,
  "name": "dot-crypto",
  "version": "0.0.0",
  "keywords": [
    "crypto",
    "currency",
    "ethereum",
    "solidity",
    "smart contract",
    "domain",
    "nft",
    "erc721"
  ],
  "description": "Contracts and tools for .crypto",
  "repository": {
    "type": "git",
    "url": "https://github.com/unstoppabledomains/dot-crypto.git"
  },
  "homepage": "https://github.com/unstoppabledomains/dot-crypto/blob/master/README.md",
  "author": {
    "name": "Braden Pezeshki",
    "email": "braden@unstoppabledomains.com"
  },
  "scripts": {
    "format": "prettier --write -l '**/*.{md,ts,json}' --ignore-path .gitignore",
    "test": "truffle test",
    "precompile": "mkdir -p static && rm -r static",
    "compile": "solc --overwrite --abi --bin --gas -o static --allow-paths . @openzeppelin=./node_modules/@openzeppelin/ contracts/**/*.sol",
    "postcompile": "mkdir -p static && find static -name '*.abi' -exec sh -c 'mv \"$0\" \"${0%.abi}.json\"' {} \\;",
    "prebuild": "yarn compile",
    "build": "tsc",
    "watch": "tsc --watch",
    "prerpc": "exit; mkdir -p .chaindata",
    "rpc": "ganache-cli --port 7545 --networkId 4447 --gasLimit 6721975 --allowUnlimitedContractSize # --db .chaindata",
    "rpc:stop": "lsof -ti:8545 | xargs kill",
    "rpc:clean": "mkdir -p .chaindata && rm -r .chaindata"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "2.3.0",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "ganache-cli": "^6.7.0",
    "prettier": "^1.18.2",
    "solc": "0.5.8",
    "truffle": "^5.0.39",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@types/yargs": "^13.0.3",
    "chalk": "^2.4.2",
    "yargs": "^14.0.0",
    "web3": "^1.2.1"
  }
}
