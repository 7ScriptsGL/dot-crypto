{
  "private": true,
  "name": "dot-crypto",
  "version": "0.0.0",
  "keywords": [
    "crypto",
    "currency",
    "ethereum",
    "solidity",
    "smart contract",
    "domain",
    "nft",
    "erc721"
  ],
  "description": "Contracts and tools for .crypto",
  "repository": {
    "type": "git",
    "url": "https://github.com/unstoppabledomains/dot-crypto.git"
  },
  "homepage": "https://github.com/unstoppabledomains/dot-crypto/blob/master/README.md",
  "author": {
    "name": "Braden Pezeshki",
    "email": "braden@unstoppabledomains.com"
  },
  "scripts": {
    "format": "prettier --write -l '**/*.{md,ts,json}' --ignore-path .gitignore",
    "test": "truffle test",
    "precompile": "mkdir -p abi && rm -r abi && mkdir -p abi/bin abi/json",
    "compile": "solc --abi --bin --gas -o abi --allow-paths . @openzeppelin=./node_modules/@openzeppelin contracts/**/*.sol --optimize --optimize-runs 200",
    "postcompile": "find abi -name '*.bin' -exec sh -c 'mv \"$0\" abi/bin;' {} \\; && find abi -name '*.abi' -exec sh -c 'mv \"$0\" \"abi/json/$(basename ${0%.abi}.json)\";' {} \\;",
    "prebuild": "yarn compile",
    "build": "tsc",
    "watch": "tsc --watch",
    "rpc:ganache": "ganache-cli --port 7545 --networkId 4447 --gasLimit 6721975",
    "rpc:geth": "geth -dev -rpc -rpcport 7545 -verbosity 0 --miner.gastarget 8000000 &",
    "rpc:stop": "lsof -ti:7545 | xargs kill"
  },
  "devDependencies": {
    "@openzeppelin/contracts": "2.3.0",
    "@types/mocha": "^5.2.7",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "ganache-cli": "^6.7.0",
    "prettier": "^1.18.2",
    "solc": "0.5.8",
    "truffle": "^5.0.39",
    "typescript": "^3.6.3"
  },
  "dependencies": {
    "@types/yargs": "^13.0.3",
    "chalk": "^2.4.2",
    "web3": "^1.2.1",
    "yargs": "^14.0.0"
  }
}
